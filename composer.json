{
    "name": "drupalnorge/drupalcamp_template",
    "description": "Template project for drupalcamps",
    "type": "project",
    "license": "GPL-2.0+",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "composer/installers": "^v1.4.0",
        "cweagans/composer-patches": "^1.6",
        "drupal-composer/drupal-scaffold": "^2.2",
        "drupal/console": "~1.0.0",
        "drupalnorge/drupalcamp_profile": "dev-master",
        "drupal/redirect": "^1.0@beta",
        "drush/drush": "^9@rc"
    },
    "require-dev": {
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    ],
    "scripts": {
      "post-install-cmd": [
        "DrupalComposer\\DrupalScaffold\\Plugin::scaffold"
      ],
      "post-update-cmd": [
        "DrupalComposer\\DrupalScaffold\\Plugin::scaffold"
      ],
      "build": [
          "git pull",
          "composer install",
          "./vendor/bin/drush --root=$(pwd)/drupal updb -y",
          "./vendor/bin/drush --root=$(pwd)/drupal cim -y",
          "./vendor/bin/drush --root=$(pwd)/drupal cr"
      ]
    },
    "extra": {
        "installer-paths": {
            "drupal/core": [
                "drupal/core"
            ],
            "drupal/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "drupal/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "drupal/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "drush/contrib/{$name}": [
                "type:drupal-drush"
            ]
        },
        "enable-patching": true,
        "patches": {
          "drupal/core": {
            "SA-CORE-2018-002": "https://cgit.drupalcode.org/drupal/patch/?id=88e134084c440adf7a977f410f603e1effe795c6"

          }
        }
    }
}
